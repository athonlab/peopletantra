<h1>Listing revisions</h1>

<table>
  <tr>
    <th>Number</th>
  </tr>

<% for revision in @revisions %>
  <tr>
    <td><%=h revision.number %></td>
    <td><%= link_to 'Show', revision %></td>
    <td><%= link_to 'Edit', edit_revision_path(revision) %></td>
    <td><%= link_to 'Destroy', revision, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New revision', new_revision_path %>
