<% if @revision %>
<h2> <%= @revision.number %>th <%= @revision.house.capitalize %> Members</h2>
<%= link_to @revision.house.eql?('loksabha') ? 'Rajyasabha Members' : 'Loksabha Members', :action => 'house', :house => (@revision.house.eql?('loksabha') ? 'rajyasabha' : 'loksabha'), :number => 15 %>
<% else %>
<h1>Listing candidates</h1>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Sex</th>
    <th>Address line 1</th>
    <th>Address line 2</th>
    <th>City town village</th>
    <th>Age</th>
    <th>Category</th>
    <th>Constituency</th>
    <th>Party</th>
  </tr>

<% for candidate in @candidates %>
  <tr>
    <td><%=h candidate.name %></td>
    <td><%=h candidate.sex %></td>
    <td><%=h candidate.address_line_1 %></td>
    <td><%=h candidate.address_line_2 %></td>
    <td><%=h candidate.city_town_village %></td>
    <td><%=h candidate.age %></td>
    <td><%=h candidate.category %></td>
    <td><%=h candidate.constituency_id %></td>
    <td><%=h candidate.party_id %></td>
    <td><%= link_to 'Detail', candidate %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @candidates %>
<br />


