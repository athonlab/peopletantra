<h1>Listing constituencies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>State</th>
  </tr>

<% for constituency in @constituencies %>
  <tr>
    <td><%=h constituency.name %></td>
    <td><%=h constituency.code %></td>
    <td><%=h constituency.state_id %></td>
    <td><%= link_to 'Show', constituency %></td>
    <td><%= link_to 'Edit', edit_constituency_path(constituency) %></td>
    <td><%= link_to 'Destroy', constituency, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New constituency', new_constituency_path %>
